# Environment Configuration
# Copy this file to .env and fill in your actual values

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_TABLE_ACTORS=Actors
AIRTABLE_TABLE_SCENES=Scenes
AIRTABLE_TABLE_PRODUCTS=Products
AIRTABLE_TABLE_ADCOPIES=AdCopies
AIRTABLE_TABLE_ADVARIANT=AdVariants

# AWS S3 Configuration
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# fal.ai Configuration
FAL_API_KEY=your_fal_api_key_here
FAL_MODEL=fal-ai/fast-sdxl
FAL_IMG2IMG_STRENGTH=0.65

# 11Labs Configuration (Optional - for voice generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Pipeline Configuration
MAX_VARIANTS_PER_RUN=10
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
